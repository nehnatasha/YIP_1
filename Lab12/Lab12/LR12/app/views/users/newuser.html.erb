<div class="row">
  <div class="col-md-5 col-centered"></div>
  <%= form_for @user do |f| %>
    <div class="col-xs-6"></div>
    <h2>Регистрация</h2>
    <div class="form-group row">
      <%= f.text_field :username, class: "form-control", size: "3x1", placeholder: "Имя пользователя" %>
    </div>
    <div class="form-group row">
      <%= f.password_field :password, class: "form-control", size: "3x1", placeholder: "Пароль" %>
    </div>
    <div class="form-group row">
      <%= f.password_field :password_confirmation, class: "form-control", size: "3x1", placeholder: "Подтверждение пароля" %>
    </div>
    <div class="row">
      <%= f.submit 'Зарегистрироваться', class: 'btn btn-primary btn-block btn-lg' %>
    </div>
  <% end %>
</div>
