<div class="row">
  <div class="col-md-5 col-centered"></div>
  <%= form_tag auth_create_path do %>
    <div class="col-xs-5"></div>
    <h2>Авторизация</h2>
    <div class="form-group row">
      <%= text_field_tag :username, nil, class: "form-control", size: "3x1", placeholder: "Имя пользователя" %>
    </div>
    <div class="form-group row">
      <%= password_field_tag :password, nil, class: "form-control", size: "3x1", placeholder: "Пароль" %>
    </div>
    <div class="row">
      <%= submit_tag 'Войти', class: 'btn btn-primary btn-block btn-lg' %>
    </div>
  <% end %>
</div>
