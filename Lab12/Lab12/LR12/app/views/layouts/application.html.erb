<!DOCTYPE html>
<html>
  <head>
    <title>LR12</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application.css', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application.js', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default" role="navigation">
      <div class="container">
        <% if logged_in? %>
        <ul class="nav navbar-nav navbar-left">
          <li><%= link_to 'Выйти', signout_path, class: 'btn btn-primary' %></li>
        </ul>
        <% else %>
        <ul class="nav navbar-nav navbar-left">
          <li><%= link_to 'Войти', signin_path, class: 'btn btn-primary' %>
          <%= link_to 'Зарегистрироваться', signup_path, class: 'btn btn-primary' %></li>
        </ul>
        <% end %>
      </div>
    </nav>

    <% flash.each do |name, msg| %>
    <%= content_tag(
          :div, msg,
          class: 'alert alert-info'
      ) %>
    <% end %>


    <div class=" container">
    <%= yield %>
    </div>
  </body>
</html>
